<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:xliff="http://schemas.android.com/apk/res-auto">

    <!-- Ime aplikacije -->
    <string name="app_name">Weatherman</string>

    <!-- Naslovi stavki u meni-u -->
    <string name="action_settings">Settings</string>
    <string name="action_map">Map Location</string>
    <string name="action_share">Share</string>

    <string name="action_refresh" translatable="false">Refresh</string>
    <string name="title_activity_detail">Details</string>
    <string name="title_activity_settings">Settings</string>

    <!-- Naslov za lokaciju u podesavanjima -->
    <string name="pref_location_label">City, Country code (e.g. RS)</string>

    <!-- Ime 'kljuca' za smestanje lokacije u SharedPreferences -->
    <string name="pref_location_key" translatable="false">location</string>

    <!-- Pocetno ime grada za lokaciju u podesavanjima -->
    <string name="pref_location_default" translatable="false">Subotica, RS</string>

    <!-- Stringovi vezani za notifikacije u podesavanjima -->
    <string name="pref_enable_notifications_key" translatable="false">enable_notifications</string>
    <string name="pref_enable_notifications_label">Weather Notifications</string>

    <string name="pref_enable_notifications_true">Enabled</string>
    <string name="pref_enable_notifications_false">Not Enabled</string>
    <string name="pref_enable_notifications_default" translatable="false">true</string>

    <!-- Stringovi za formatiranje podataka vezanih za vremenske uslove -->

    <!-- Naslov za jedinicu temperature u podesavanjima -->
    <string name="pref_units_label">Temperature Units</string>

    <!-- Naslov za metricku jedinicu temperature u podesavanjima -->
    <string name="pref_units_label_metric">Metric "\u00B0"C</string>

    <!--  Naslov za imperijalnu jedinicu temperature u podesavanjima -->
    <string name="pref_units_label_imperial">Imperial "\u00B0"F</string>

    <!-- Ime 'kljuca' za jedinicu temperature u SharedPreferences  -->
    <string name="pref_units_key" translatable="false">units</string>

    <!-- Vrednost metricke jedinice temp. u SharedPreferences -->
    <string name="pref_units_metric" translatable="false">metric</string>

    <!-- Vrednost imperijalne jedinice temp. u SharedPreferences  -->
    <string name="pref_units_imperial" translatable="false">imperial</string>


    <!-- Jezicke konstante -->
    <string name="today">Today</string>

    <!-- Naslov za sutrasnju prognozu -->
    <string name="tomorrow">Tomorrow</string>

    <!-- Format datuma -->
    <string name="format_full_friendly_date"><xliff:g id="month">%1$s</xliff:g>, <xliff:g id="day">%2$s</xliff:g></string>


    <!-- Format temperature -->
    <string name="format_temperature"><xliff:g id="temp">%1.0f</xliff:g>\u00B0</string>

    <!-- Format brzine vetra -->
    <!-- Brzina vetra u mph -->
    <string name="format_wind_mph">Wind: <xliff:g id="speed">%1$1.0f</xliff:g> mph <xliff:g id="direction">%2$s</xliff:g></string>
    <!-- Brzina vetra u kph  -->
    <string name="format_wind_kmh">Wind: <xliff:g id="speed">%1$1.0f</xliff:g> km/h <xliff:g id="direction">%2$s</xliff:g></string>

    <!-- Format za pritisak -->
    <string name="format_pressure">Pressure: <xliff:g id="pressure">%1.0f</xliff:g> hPa</string>

    <!-- Format za vlaznost -->
    <string name="format_humidity">Humidity: <xliff:g id="humidity">%1.0f</xliff:g> %%</string>

    <!-- SyncAdapter -->
    <string name="sync_account_type">weatherman.myweather.com</string>
    <string name="content_authority">com.myweather.vlada.weatherman</string>

    <!-- Format notifikacije -->
    <string name="format_notification">Forecast: <xliff:g id="condition">%1$s</xliff:g> - High: <xliff:g id="high">%2$s</xliff:g> Low: <xliff:g id="low">%3$s</xliff:g></string>

    <string name="pref_last_notification">last_notification</string>
</resources>
