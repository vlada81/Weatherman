<resources>

    <!-- Osnovna tema aplikacije. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/weatherman_blue</item>
        <item name="colorPrimaryDark">@color/weatherman_dark_blue</item>
    </style>

    <!-- Tema glavne aktivnosti -->
    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Weatherman.NoTitle</item>
    </style>

    <!-- Tema Settings aktivnosti. -->
    <style name="SettingsTheme" parent="AppTheme"></style>

    <!-- Stilovi action bar-a u glavnoj aktivnosti -->
    <style name="ActionBar.Solid.Weatherman.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- Stil za 'forecast listview' -->
    <style name="ForecastListStyle"></style>

</resources>
